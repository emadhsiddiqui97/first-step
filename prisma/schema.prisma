// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?
  category    String?
  stock       Int      @default(0)
  sellerId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}
